# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_or_chat_id

# Helius RPC Configuration
HELIUS_API_KEY=your_helius_api_key_here

# Pushover Configuration
PUSHOVER_APP_TOKEN=your_pushover_app_token_here

# Database Configuration
DATABASE_PATH=./data/bot.db

# Sync Interval (seconds)
SYNC_INTERVAL=60

# Alert Thresholds (USDT) - Pushover alerts sent once when crossing these thresholds
ALERT_THRESHOLD_LOW=1000000   # Alert when balance drops below this
ALERT_THRESHOLD_HIGH=2450000  # Alert when balance exceeds this

# Admin User IDs (comma-separated)
ADMIN_USER_IDS=123456789,987654321
